{
  "compileOnSave": false,
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@auction-app/app-state": ["libs/app-state/src/index.ts"],
      "@auction-app/ui-components": ["libs/ui-components/src/index.ts"],
      "@mocks/*": ["apps/auction-app/src/mocks/*"]
    }
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "tmp"]
}
